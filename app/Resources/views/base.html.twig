<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />


        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">

        <!-- Optional theme -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap-theme.min.css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->


        <!-- Can't move jquery to the end, due to JS files being used in includes via ESI, with extra JS and onloads. -->
        <script src="//code.jquery.com/jquery.js"></script>
        {% block stylesheets %}
            <link href="{{ asset('/bundles/vrbhsite/main.css') }}" rel="stylesheet" />
            <link href="{{ asset('/bundles/vrbhsite/typeahead.js-bootstrap.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">{{ "toggle.nav"|trans|desc("Toggle navigation") }}</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('index') }}">{{ "header.name"|trans() }}</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">

                        <li><a href="{{  path('about') }}">{{ "header.about"|trans() }}</a></li>
                        <li><a href="">{{ "header.contact"|trans|desc("Contact") }}</a></li>
                        <li><a href="{{ path('nelmio_api_doc_index') }}">{{ "header.api"|trans() }}</a></li>

                        {%  if app.user %}
                            <li><a href="#"data-toggle="modal" data-target="#joinOrg">{{ "header.join"|trans() }}</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">{{ "header.logout"|trans() }}</a></li>
                        {% else %}
                            <li><a href="{{ path('fos_user_security_login') }}">{{ "header.login"|trans() }}</a></li>
                            <li><a href="{{ path('fos_user_registration_register') }}">{{ "header.register"|trans() }}</a></li>
                        {% endif %}
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>

        <div class="container">
            <div class="alert alert-success" style="display: none" id="alert-success"></div>

            <div class="row row-offcanvas row-offcanvas-right">

                <div {% if app.user %}class="col-xs-12 col-sm-9"{% else %}class="col-xs-15 col-sm-12"{% endif %}>
                    {% if app.user %}
                        <div class="pull-right visible-xs">
                            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">{{ "header.toggleleft"|trans() }}</button>
                        </div>
                    {% endif %}
                    {% if jumbo is defined %}
                        <div class="jumbotron">
                            <h1>{{ jumbo_title }}</h1>
                            <p>{{ jumbo_text }}</p>
                            {% if jumbo_url is defined  %}
                                <p><a href="{{ jumbo_url }}" class="btn btn-primary btn-lg" role="button">{{ "header.learn"|trans() }} Â»</a></p>
                            {% endif %}
                        </div>
                    {% else %}
                        {% block outside_container %}
                        {% endblock %}
                    {% endif %}
                    <div class="row">
                        {% block body %}{% endblock %}
                    </div>
                </div>
                {% if app.user %}
                    <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">

                        {{ render_esi(controller('VrbhSiteBundle:Default:OrgSidebar')) }}
                        {% block sidebar %}
                        {% endblock %}

                    </div>
                {% endif %}
            </div>
            <hr />
            <footer>{{ "footer.text"|trans() }}</footer>
        </div>

        {% if app.user %}
            <!-- Join a new organisation -->
            <!-- Modal -->
            <div class="modal fade" id="joinOrg" tabindex="-1" role="dialog" aria-labelledby="JoinOrg" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" data-save-state="join-org-cancel" class="close" data-dismiss="modal"
                                    aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">{{ "header.join"|trans|desc('Join organisation') }}</h4>
                        </div>
                        <div class="modal-body">
                            <p>{{ "modal.join.info"|trans()|desc("Joining a organisation requires approval from the organisation administrator. The administrator will receive a email when you choose to join a organisation, and will approve or deny the request. You will receive a email on approval or denial.") }}

                                <br />
                                <span id="join-new-org-name-error" class="error">{{ "error.orgnameRequired"|trans|desc("The organisation name is required.") }}</span>
                                <br />
                                <input id="typeahead" type="text" data-save-state="join-org-name" required="required" class="form-control"
                                       placeholder="{{ "general.names.organisation"|trans|desc("Organisation name") }}"/>
                            </p>

                            <script type="text/javascript">
                                var rst = '{{ path('search_org', {'param': 'rst'}) }}'.replace('rst', '%QUERY');
                                var joinOrg = '{{ path('joinOrg') }}';
                            </script>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-save-state="join-org-cancel"
                                    data-dismiss="modal">{{ "general.close"|trans|desc("Close") }}
                            </button>
                            <button type="button" class="btn btn-primary" data-save-state="join-org">{{ "modal.join.save"|trans|desc("Send request") }}</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div><!-- /.modal -->
        {% else %}
            <script>var rst = null;</script>
        {% endif %}

        <!-- Latest compiled and minified JavaScript -->
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
        <script src="{{ asset('/bundles/vrbhsite/main.js') }}" type="text/javascript"></script>
        <script src="{{ asset('/bundles/vrbhsite/typeahead.min.js') }}" type="text/javascript"></script>

        <script type="text/javascript">
            $(document).ready(function() {
                $('[data-toggle=offcanvas]').click(function() {
                    $('.row-offcanvas').toggleClass('active');
                });
            });
        </script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
