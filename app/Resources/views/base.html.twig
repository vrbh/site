<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />


        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">

        <!-- Optional theme -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap-theme.min.css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->

        {% block stylesheets %}
            <link href="{{ asset('/bundles/vrbhsite/main.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('index') }}">Stock information</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">

                        <li><a href="{{  path('about') }}">About</a></li>
                        <li><a href="">Contact</a></li>
                        <li><a href="{{ path('nelmio_api_doc_index') }}">API</a></li>

                        {%  if app.user %}
                            <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                        {% else %}
                            <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                            <li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                        {% endif %}
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>

        <div class="container">
            <div class="row row-offcanvas row-offcanvas-right">

                <div {% if app.user %}class="col-xs-12 col-sm-9"{% else %}class="col-xs-15 col-sm-12"{% endif %}>
                    {% if app.user %}
                        <div class="pull-right visible-xs">
                            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle left menu</button>
                        </div>
                    {% endif %}
                    {% if jumbo is defined %}
                        <div class="jumbotron">
                            <h1>{{ jumbo_title }}</h1>
                            <p>{{ jumbo_text }}</p>
                            {% if jumbo_url is defined  %}
                                <p><a href=""{{ jumbo_url }} class="btn btn-primary btn-lg" role="button">Learn more Â»</a></p>
                            {% endif %}
                        </div>
                    {% else %}
                        {% block outside_container %}
                        {% endblock %}
                    {% endif %}
                    <div class="row">
                    {% block body %}{% endblock %}
                    </div>
                </div>
                {% if app.user %}
                    <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
                        <div class="list-group">
                            {{ render_esi(controller('VrbhSiteBundle:Default:OrgSidebar')) }}
                            {% block sidebar %}
                            {% endblock %}
                        </div>
                    </div>
                {% endif %}
            </div>
            <hr />
            <footer>Footer</footer>
        </div>

        <script src="//code.jquery.com/jquery.js"></script>
        <!-- Latest compiled and minified JavaScript -->
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>

        <script type="text/javascript">
            $(document).ready(function() {
                $('[data-toggle=offcanvas]').click(function() {
                    $('.row-offcanvas').toggleClass('active');
                });

                $('[data-save-state=create-new-org]').click(function() {

                    $('[data-save-state=create-new-org]').attr('disabled', 'disabled');
                    $('[data-save-state=create-new-org-cancel]').attr('disabled', 'disabled');

                    removeDisabled = function()
                    {
                        $('[data-save-state=create-new-org]').removeAttr('disabled');
                        $('[data-save-state=create-new-org-cancel]').removeAttr('disabled');
                    }

                    hideCreateNewOrg = function()
                    {
                        $('#createNewOrg').modal('hide');

                        removeDisabled();
                    }

                    var name = $('[data-save-state=create-new-org-name]').val();

                    if (!name)
                    {

                        removeDisabled();
                    }
                    else
                    {

                    }
                });
            });
        </script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
